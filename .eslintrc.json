{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "google"
  ],
  "plugins": [
    "react",
    "mocha",
    "import"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js"
        ]
      }
    },
    "import/ignore": [
      "\\.(scss|less|css|hbs|json)$"
    ]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "__DEV__": true
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 160
      }
    ],
    "semi": 2,
    "comma-dangle": [
      "error",
      "never"
    ],
    "require-jsdoc": [
      "warn"
    ],
    "valid-jsdoc": [
      "warn"
    ],
    "no-console": [
      "off"
    ],
    "no-invalid-this": [
      "off"
    ],
    "mocha/no-exclusive-tests": "error",
    "import/default": "off",
    "import/named": "off"
  }
}
